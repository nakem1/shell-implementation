{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "norm",
            "type": "shell",
            "command": "norminette ${file}",
            "group": "test"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "./minishell",
            "group": "test"
        },
        {
            "label": "build gcc",
            "type": "shell",
            "command": "gcc -Wall -Wextra -Werror -g3 -o minishell -I ./headers -I ./rinshell rinshell/*.c src/parse/*.c src/main/*.c src/libft/*.c -ltermcap",
            "group": "build"
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "group": "build"
        },
        {
            "label": "re",
            "type": "shell",
            "command": "make re",
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}